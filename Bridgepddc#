using System;

namespace patron1bridgecsharp
{
	class MainClass
	{
		public static void Main (string[] args)
		{

			Abstraction ab = new RefinedAbstraction();
			// poner la implementacion y llamarla
			ab.Implementor = new ConcreteImplementorA();
			ab.Operation();
			// cambiar la implementacion y llamarla
			ab.Implementor = new ConcreteImplementorB();
			ab.Operation();
			Console.ReadKey();
		}
	}
	/// clase abstraccion
	class Abstraction
	{
		protected Implementor implementor;
		// Property
		public Implementor Implementor
		{
			set { implementor = value; }
		}
		public virtual void Operation()
		{
			implementor.Operation();
		}
	}
	/// el implementador de la clase abstract
	abstract class Implementor
	{
		public abstract void Operation();
	}
	/// clase refinarabstraccion
	class RefinedAbstraction : Abstraction
	{
		public override void Operation()
		{
			implementor.Operation();
		}
	}
	/// clase concreto implementador A
	class ConcreteImplementorA : Implementor
	{
		public override void Operation()
		{
			Console.WriteLine("concreto el implemento A esta funcionando");
		}
	}
	/// clase concreto implementador B
	class ConcreteImplementorB : Implementor

	{
		public override void Operation()

		{
			Console.WriteLine("concreto el implemento B esta funcionando");
		}

	}
}
